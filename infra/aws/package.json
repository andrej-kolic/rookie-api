{
  "name": "@repo/infra-aws",
  "version": "1.0.0",
  "private": true,
  "description": "AWS infrastructure for @repo/kraken-proxy API deployment",
  "type": "module",
  "scripts": {
    "envprint": "printenv",
    "envtest": "dotenv -- pnpm envprint",
    "deploy:infra": "dotenv -- ./scripts/deploy.sh infra",
    "deploy:update": "./scripts/deploy.sh update",
    "deploy:outputs": "./scripts/deploy.sh outputs",
    "validate": "./scripts/deploy.sh validate",
    "setup:oidc": "./scripts/oidc.sh",
    "logs": "aws logs tail \"/aws/lambda/kraken-proxy-api\" --since 1m --format short --region us-east-1",
    "clean": "rm -rf dist lambda.zip",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/index.mjs --external:aws-sdk --minify --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "package": "cd dist && touch .env && zip -r ../lambda.zip index.mjs .env",
    "build": "pnpm run clean && pnpm run bundle && pnpm run package"
  },
  "dependencies": {
    "@vendia/serverless-express": "4.12.6",
    "@repo/kraken-proxy": "workspace:*"
  },
  "devDependencies": {
    "esbuild": "0.27.2"
  }
}
